<section
  id="js-scroll-to-testimonials"
  class="flex min-h-screen w-full scroll-mt-12 py-12 sm:scroll-mt-24 sm:py-24 lg:py-0"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div
      class="filter-container relative grid grid-cols-2 place-content-between items-center py-10"
    >
      <h2 class="section-title text-4xl font-bold sm:text-6xl">Testimonials</h2>
    </div>

    {% if testimonials %}
    <div
      class="testimonials grid grid-cols-none gap-14 gap-y-14 sm:grid-cols-2 lg:grid-cols-3"
    >
      {% for testimonial in testimonials %}
      <div class="testimonial w-100 space-between flex flex-col">
        <blockquote
          class="mb-6 block grow rounded-2xl rounded-br-none bg-gray-100 p-8 text-xl text-gray-900"
        >
          {{ testimonial.content | safe }}
        </blockquote>
        <div class="flex flex-row-reverse content-end items-center text-right">
          <img
            width="150"
            height="150"
            class="lazy ml-4 h-10 w-10 rounded-full"
            data-src="{% portfolioImage testimonial.image %}"
            alt="{{ testimonial.title }}"
          />
          <div class="text-sm">
            <h3 class="font-bold">{{ testimonial.title }}</h3>
            <p class="text-xs">{{ testimonial.location }}</p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</section>
<!-- Testimonials Section -->

<section
  id="portfolio"
  class="relative flex w-full py-16 bg-white dark:bg-gray-800 sm:py-24 scroll-mt-12 sm:min-h-screen sm:scroll-mt-24 section"
>
  <div
    class="container relative px-4 py-4 mx-auto sm:px-6 lg:px-8 lg:py-8"
    x-data="{ filterOpen: false }"
    @click.away="filterOpen = false"
  >
    <div
      class="relative flex items-center py-10 filter-container flex-nowrap place-content-between"
    >
      <h2 class="text-4xl font-bold text-gray-800 dark:text-gray-100 section-title grow sm:text-6xl">
        Portfolio
      </h2>
      <div class="filter-block">
        <div
          x-transition
          class="flex items-center flex-none w-full space-x-8 sm:ml-auto lg:mt-0 lg:w-auto"
          x-data="filterPortfolio"
        >
          <div
            x-cloak
            :class="{ 'block lg:flex mr-0': filterOpen, 'hidden': ! filterOpen }"
            class="filters absolute right-0 top-[100px] z-10 flex-col rounded-xl text-gray-700 dark:text-gray-100 bg-gray-100 dark:bg-gray-800 uppercase lg:static lg:flex-row lg:space-x-6 lg:rounded-none lg:bg-transparent dark:lg:bg-transparent lg:bg-opacity-0 lg:text-xl w-full lg:w-auto shadow-xs shadow-gray-200 lg:shadow-none dark:lg:shadow-none shadow-opacity-50"
          >
            {% for item in category %}
              <a
              @click.prevent="clicked($event)"
              href="#{{item.filter}}"
              :class="value === '{{
                item.filter
              }}' ? 'text-gray-800 dark:text-gray-300 lg:underline lg:underline-offset-4' : ''"
              class="block px-6 py-1 text-center uppercase transition-colors filter hover:cursor-pointer dark:text-gray-100 hover:text-gray-500 dark:hover:text-gray-300 lg:px-0 lg:py-0"
              data-filter="{{ item.filter }}"
              id="{{ item.filter }}"
            >
                {{ item.name }}
              </a>
            {% endfor %}
          </div>
          <button
            x-on:click="filterOpen = ! filterOpen"
            class="flex items-center space-x-2 text-gray-700 focus:outline-hidden hover:cursor-pointer dark:text-gray-100"
          >
            <span class="text-xl uppercase dark:text-gray-100" x-text="filterOpen ? '' : 'Filter'">
              Filter
            </span>

            <div class="relative flex items-center justify-center w-10 h-10">
              <span
                x-bind:class="filterOpen ? '-translate-y-0 rotate-45' : '-translate-y-3'"
                class="absolute w-full h-1 transition transform bg-current rounded-sm dark:bg-gray-100"
              ></span>
              <span
                x-bind:class="filterOpen ? 'opacity-0 translate-x-3 w-10' : 'opacity-100'"
                class="absolute w-3/5 h-1 transition transform bg-current rounded-sm dark:bg-gray-100"
              ></span>
              <span
                x-bind:class="filterOpen ? 'translate-y-0 -rotate-45 w-10' : 'translate-y-3 w-1/5'"
                class="absolute h-1 transition transform bg-current rounded-sm dark:bg-gray-100"
              ></span>
            </div>
          </button>
        </div>
      </div>
    </div>

    <div
      class="relative grid grid-cols-none gap-8 collections 2xl:grid-col-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4"
    >
      {% for item in portfolio %}
        <figure data-groups="{{item.dataGroups}}"
        class="rounded-xl portfolio overflow-hidden border border-base-200 {{ item.category }} group shadow-xl"
      >
          <a
          data-gall aria-label="View full image of {{ item.title }}" data-vbtype=""
          href="{% portfolioImage item.featuredImage %}"
          class="absolute w-full h-full block  portfolio-link z-10"
        ></a>
          <img
            width="445"
            height="330"
            data-src="{% portfolioImage item.thumbnail %}"
            alt="Featured Image of {{ item.title }}"
            class="portfolio-image lazy mb-0 h-[250px] w-full object-cover transition-transform group-hover:-translate-y-10"
/>
          <figcaption
            class="absolute bottom-0 left-0 w-full px-5 py-4 transition-transform translate-y-full bg-base-100 portfolio-info group-hover:translate-y-0"
          >
            <h3 class="mb-0">{{ item.title }}</h3>
          </figcaption>
        </figure>
      {% endfor %}
      <div class="w-full sm:w-1/2 md:w-1/2 lg:w-1/3 xl:w-1/4 items-sizer"></div>
    </div>
  </div>
  <!-- End .container -->
</section>
<!-- Portfolio Section -->
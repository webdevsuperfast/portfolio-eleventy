<footer class="fixed w-full bottom-4 lg:bottom-24">
  <div class="container px-4 mx-auto sm:px-6 lg:px-8">
    <div class="relative" x-data="{ open: false }" @click.away="open = false">
      <button
        class="absolute bottom-0 right-0 p-5 bg-gray-700 rounded-br-none rounded-xl dark:bg-rose-900 hover:bg-gray-400 dark:hover:bg-rose-700 focus:bg-gray-400 dark:focus:bg-rose-700 active:bg-gray-400 dark:active:bg-rose-700"
        x-on:click="open = ! open" aria-label="Social Media Links"
      >
        <div class="relative flex items-center justify-center w-5 h-5">
          <span
            x-bind:class="open ? 'rotate-45' : ''"
            class="absolute h-0.5 w-full transform rounded bg-white transition"
          ></span>
          <span
            x-bind:class="open ? 'rotate-45' : ''"
            class="absolute h-full w-0.5 transform rounded bg-white transition"
          ></span>
        </div>
      </button>
      <div
        :class="{ 'block': open, 'hidden': ! open }"
        class="absolute right-0 hidden overflow-hidden bg-gray-700 bottom-20 rounded-xl dark:bg-rose-900"
        x-show="open"
        x-transition
        x-cloak
      >
        {% if social %}
          <div class="">
            {% for item in social %}
              <a
            class="block px-5 py-3 text-center text-white uppercase transition-all hover:bg-gray-400 dark:hover:bg-rose-700 lg:py-5 lg:px-10 lg:text-xl"
            href="{{ item.url }}"
            target="{{ item.target }}"
          >
                {{ item.label }}
              </a>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>
<!-- End Footer -->